    button_1_signal:
      friendly_name: "Button 1 signal"
      value_template: >
        {% set sig = state_attr('zha.button_1', 'rssi') %}
        {% if sig == None %}
          Unknown
        {% elif sig | int < -85 %}
          Very poor
        {% elif sig | int < -75 %}
          Poor
        {% elif sig | int < -65 %}
          Fair
        {% elif sig | int < -55 %}
          Good
        {% elif sig | int >= -55 %}
          Excellent
        {% endif %}
      icon_template: >
        {% set sig = state_attr('zha.button_1', 'rssi') %}
        {% if sig == None %}
          mdi:network-strength-off-outline
        {% elif sig | int < -85 %}
          mdi:network-strength-outline
        {% elif sig | int < -75 %}
          mdi:network-strength-1
        {% elif sig | int < -65 %}
          mdi:network-strength-2
        {% elif sig | int < -55 %}
          mdi:network-strength-3
        {% elif sig | int >= -55 %}
